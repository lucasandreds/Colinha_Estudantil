<form action="/login" method="post">
  <div class="login-container">
    <h2>Login</h2>
    <div class="form-group">
      <label for="username">Usu√°rio:</label>
      <input id="username" name="username" type="text" required>
    </div>
    <div class="form-group">
      <label for="password">Senha:</label>

{{#> main title="Editar Anotação - Colinha"}}
<h2>Editar Anotação</h2>
<form id="noteEditForm" hx-put="/notes/{{note.id}}" hx-target="body" hx-swap="beforeend">
  <label>
    Título: <input type="text" name="title" value="{{note.title}}" required>
  </label><br>
  <label>
    Conteúdo:
    <textarea name="content" rows="10" required>{{note.content}}</textarea>
  </label><br>
  <button type="submit">Salvar Alterações</button>
</form>
{{/main}}